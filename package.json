{
  "name": "asmaul-husna-api",
  "version": "1.0.0",
  "description": "asmaul-husna-api is an API to get the list of Asma'ul Husna",
  "author": "Haikel Ilham Hakim",
  "private": true,
  "license": "MIT",
  "homepage": "https://asmaul-husna-api.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/haikelz/asmaul-husna-api"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "cz",
    "prepare": "ts-patch install && typia patch"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/fastify": "^2.1.1",
    "@nestia/core": "^2.5.8",
    "@nestia/e2e": "^0.4.1",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/cache-manager": "^2.2.1",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-fastify": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "cache-manager": "^5.4.0",
    "graphql": "^16.8.1",
    "nestjs-zod": "^3.0.0",
    "reflect-metadata": "^0.2.1",
    "slugify": "^1.6.6",
    "typia": "^5.4.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fastify/static": "^7.0.1",
    "@nestia/sdk": "^2.5.8",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nestia": "^5.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpm cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./prettier.config.js --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./prettier.config.js --write"
    ]
  }
}
