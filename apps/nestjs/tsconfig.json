{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ]
    },
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}